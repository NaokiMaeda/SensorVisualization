{

	"extends": "eslint:recommended",
	"parserOptions": {
		"sourceType": "module"
	},
	"ecmaFeatures" : {
		"jsx": true,
		"objectLiteralShorthandMethods" : true
  	},
	"env": {
		"es6": true,
		"node": true,
		"browser" : true
	},
	"rules": {
		"no-console":0,
		"indent": [
			"warn",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"warn",
			"double"
		],
		"semi": [
			"warn",
			"always"
		]
	}
}
